@model IEnumerable<Quanlydiem.Models.HOCSINH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="w3-center w3-text-blue" style=" font-family: Times New Roman; font-size:50px ">Học Sinh</h2>
<p>
    @Html.ActionLink("Tạo Mới Dữ Liệu", "Create")
</p>
<p>
    @Html.ActionLink("Trở Về", "LayDuLieu", "HOCSINHs")
</p>

<table class="w3-table-all w3-hoverable " style="font-family: Times New Roman; font-size:20px">
    <tr class="w3-blue-grey  w3-center">
        <th>
            <label>Mã Lớp</label>
        </th>
        <th>
            <label>Mã Học Sinh</label>
        </th>
        <th>
            <label>Tên Học Sinh</label>
        </th>
        <th>
            <label>Năm Sinh</label>
        </th>
        <th>
            <label>Giới Tính</label>
        </th>
        <th>
            <label>Quê Quán</label>
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaLop)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MaHS)
    </td>
    <td>
        @Html.Raw(item.TenHS)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NamSinh)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GioiTinh)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.QueQuan)
    </td>
    
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.MaHS }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.MaHS })
    </td>
</tr>
    }

</table>
