@model IEnumerable<Quanlydiem.Models.HOCSINH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Học Sinh</h2>
@Styles.Render("~/Content/css")
<p>
    @Html.ActionLink("Tạo Mới Dữ Liệu", "Create")
</p>

<table class="w3-table-all w3-hoverable">
    <tr class="w3-blue-grey">
        <th>
            <label>Mã Học Sinh</label>
        </th>
        <th>
            <label>Tên Học Sinh</label>
        </th>
        <th>
            <label>Năm Sinh</label>
        </th>
        <th>
            <label>Giới Tính</label>
        </th>
        <th>
            <label>Quê Quán</label>
        </th>
        <th>
            <label>Lớp</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaHS)
    </td>
    <td>
        @Html.Raw( item.TenHS)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NamSinh)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GioiTinh)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.QueQuan)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Lop)
    </td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.MaHS }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.MaHS })
    </td>
</tr>
    }

</table>
