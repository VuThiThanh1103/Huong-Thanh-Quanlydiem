@model IEnumerable<Quanlydiem.Models.HOCSINH>
@{
    ViewBag.Title = "TimKiem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TimKiem</h2>
<table class="w3-table-all w3-hoverable table-bordered" style="font-family: Times New Roman; font-size:20px">
    <tr class="w3-blue-grey  w3-center">
        <th>
            <label>Mã Học Sinh</label>
        </th>
        <th>
            <label>Tên Học Sinh</label>
        </th>
        <th>
            <label>Năm Sinh</label>
        </th>
        <th>
            <label>Giới Tính</label>
        </th>
        <th>
            <label>Quê Quán</label>
        </th>
        <th>
            <label>Lớp</label>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr >
            <td>
                @Html.DisplayFor(modelItem => item.MaHS)
            </td>
            <td>
                @Html.Raw(item.TenHS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NamSinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QueQuan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaLop)
            </td>

        </tr>
    }

</table>
