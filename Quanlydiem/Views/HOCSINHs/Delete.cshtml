@model Quanlydiem.Models.HOCSINH

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa</h2>

<h3>Bạn có chắc muốn xóa không?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">

        <dt>
           <label>Tên Học Sinh</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenHS)
        </dd>

        <dt>
            <label>Năm Sinh</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NamSinh)
        </dd>

        <dt>
            <label>Giới Tính</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>

        <dt>
            <label>Quê Quán</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QueQuan)
        </dd>

        <dt>
            <label>Lớp</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lop)
        </dd>

