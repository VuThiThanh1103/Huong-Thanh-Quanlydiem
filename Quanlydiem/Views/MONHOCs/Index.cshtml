@model IEnumerable<Quanlydiem.Models.MONHOC>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="w3-center w3-text-blue" style=" font-family: Times New Roman; font-size:50px ">Môn Học</h2>
@Styles.Render("~/Content/css")
<p>
    @Html.ActionLink("Tạo Mới Dữ Liệu", "Create")
</p>
<table class="w3-table-all w3-hoverable" style="font-family: Times New Roman; font-size:20px">
    <tr class="w3-blue-grey">
        <th>
           <label>Mã Môn Học</label>
        </th>
        <th>
            <label>Tên Môn Học</label>
        </th>
        <th>
            <label>Số Tín Chỉ</label>
        </th>
        <th>
            <label>Sĩ Số</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaMon)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenMon)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SoTinChi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SiSo)
    </td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.MaMon }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.MaMon })
    </td>
</tr>
}

</table>
