@model IEnumerable<Quanlydiem.Models.LOP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="w3-center w3-text-blue" style=" font-family: Times New Roman; font-size:50px ">Lớp</h2>
@Styles.Render("~/Content/css")
<p>
    @Html.ActionLink("Tạo Mới Dữ Liệu", "Create")
</p>
<table class="w3-table-all w3-hoverable " style="font-family: Times New Roman; font-size:20px">
    <tr class="w3-blue-grey">
        <th>
            <label>Mã Lớp</label>
        </th>

        <th>
            <label>Tên Lớp</label>
        </th>
        <th>
            <label>Sĩ Số</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaLop)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenLop)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SiSo)
    </td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.MaLop }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.MaLop })
    </td>
</tr>
    }

</table>
