@model IEnumerable<Quanlydiem.Models.LOP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lớp</h2>
@Styles.Render("~/Content/css")
<p>
    @Html.ActionLink("Tạo Mới Dữ Liệu", "Create")
</p>
<table class="w3-table-all w3-hoverable">
    <tr class="w3-blue-grey">
        <th>
            <label>Khối</label>
        </th>
        <th>
            <label>Tên Lớp</label>
        </th>
        <th>
            <label>Mã Giáo Viên</label>
        </th>
        <th>
            <label>Sĩ Số</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Khoi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenLop)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MaGV)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SiSo)
    </td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.TenLop }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.TenLop })
    </td>
</tr>
    }

</table>
